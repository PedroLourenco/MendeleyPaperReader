<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mendeleypaperreader"
    android:versionCode="02"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="15" />
    
       	<uses-permission android:name="android.permission.INTERNET" />
		<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
		<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> 
		<uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/paper_reader_512_512"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mendeleypaperreader.MainActivity"
            android:label="@string/app_name" 
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:name="com.mendeleypaperreader.MainMenuActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.mendeleypaperreader.DetailsActivity"
            android:label="@string/app_name" 
			android:parentActivityName="com.mendeleypaperreader.MainMenuActivity"
			android:launchMode="singleTop">
        </activity>
        
        <activity
            android:name="com.mendeleypaperreader.DocumentsDetailsActivity"
            android:label="@string/app_name" 
            android:parentActivityName="com.mendeleypaperreader.DetailsActivity" 
            android:launchMode="singleTop">
        </activity>
        
         <activity
            android:name="com.mendeleypaperreader.AbstractDescriptionActivity"
            android:label="@string/app_name" 
            android:parentActivityName="com.mendeleypaperreader.DocumentsDetailsActivity" >
        </activity>
        
          <activity
            android:name="com.mendeleypaperreader.AboutActivity"
            android:label="@string/app_name" 
            android:parentActivityName="com.mendeleypaperreader.MainMenuActivity" >
        </activity>
        
       <provider
       android:name="com.mendeleypaperreader.utl.MyContentProvider" 
       android:authorities="com.android.mendeleypaperreader.utl.MyContentProvider" 
       android:exported="false"
      />
       
       
  
    </application>

</manifest>
